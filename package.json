{
  "name": "pgats-02-api",
  "version": "1.0.0",
  "description": "Esta API permite o registro, login, consulta de usuários e transferências de valores entre usuários. O objetivo é servir de base para estudos de testes e automação de APIs.",
  "main": "app.js",
  "scripts": {
    "test": "mocha \"test/**/*.test.js\" --timeout 10000 --reporter mochawesome",
    "test-rest-external": "mocha \"test/rest/external/**/*.test.js\" --timeout 10000 --reporter mochawesome",
    "test-rest-controller": "mocha \"test/rest/controller/**/*.test.js\" --timeout 10000 --reporter mochawesome",
    "test-controller-rest": "mocha \"test/rest/controller/**/*.test.js\" --timeout 10000 --reporter mochawesome",
    "test-graphql-external": "mocha \"test/graphql/external/**/*.test.js\" --timeout 10000 --reporter mochawesome",
    "test-graphql-controller": "mocha \"test/graphql/controller/**/*.test.js\" --timeout 10000 --reporter mochawesome",
    "test:ci": "npm run test-rest-external && npm run test-graphql-external",
    "start-rest": "node server.js",
    "start-graphql": "node graphql/server.js",
    "dev": "node server.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "apollo-server": "^3.13.0",
    "apollo-server-express": "^3.13.0",
    "bcryptjs": "^3.0.2",
    "express": "^4.21.2",
    "graphql": "^16.11.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "chai-exclude": "^2.1.1",
    "dotenv": "^17.2.2",
    "jsonwebtoken": "^9.0.2",
    "mocha": "^11.7.4",
    "mochawesome": "^7.1.3",
    "nock": "^14.0.10",
    "sinon": "^21.0.0",
    "start-server-and-test": "^2.1.2",
    "supertest": "^7.1.4"
  }
}
